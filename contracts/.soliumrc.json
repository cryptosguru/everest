{
  "extends": "solium:recommended",
  "plugins": [
    "security"
  ],
  "rules": {
    "quotes": [
      "warning",
      "double"
    ],
    "indentation": [
      "warning",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "max-len": [
      "warning",
      100
    ]
  }
}
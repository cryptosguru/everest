{
  "name": "everest",
  "version": "0.0.1",
  "scripts": {
    "fix-js": "eslint ./ --fix",
    "fix-sol": "solium -d contracts/ --fix",
    "lint-js": "eslint ./",
    "lint-sol": "solium -d contracts/",
    "prettier-check": "prettier -c '**/*.js' && prettier -c '**/*.sol'",
    "prettier-js": "prettier -c '**/*.js'",
    "prettier-sol": "prettier -c '**/*.sol'",
    "prettier-write-js": "prettier --write '**/*.js'",
    "prettier-write-sol": "prettier --write '**/*.sol'",
    "flatten": "truffle-flattener ./contracts",
    "abis": "docker run -v  /Users/davidkajpust/coding-no-icloud-backup/thegraph/dave/everest/contracts:/abis-vol ethereum/solc:0.5.12 -o /abis-vol/abis --overwrite --abi /abis-vol/contracts/Everest.sol"
  },
  "dependencies": {
    "@truffle/hdwallet-provider": "1.0.28",
    "bn.js": "4.11.8",
    "chai": "4.2.0",
    "ethers": "4.0.39",
    "openzeppelin-test-helpers": "0.5.1"
  },
  "devDependencies": {
    "eslint": "4.15.0",
    "eslint-config-prettier": "6.5.0",
    "husky": "1.2.0",
    "prettier": "1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier --c '**/*.js' && eslint ./ && solium -d contracts/"
    }
  }
}

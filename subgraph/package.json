{
  "name": "everest",
  "version": "1.0.0",
  "description": "Registry of crypto projects",
  "main": "index.js",
  "repository": "https://github.com/graphprotocol/everest/subgraph",
  "author": "The Graph",
  "license": "MIT",
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.17.1",
    "@graphprotocol/graph-ts": "0.17.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "typescript": "^3.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write --config ./.prettierrc",
      "git add"
    ]
  },
  "scripts": {
    "build-contract": "solc contracts/Gravity.sol --abi -o abis --overwrite && solc contracts/Gravity.sol --bin -o bin --overwrite",
    "codegen": "graph codegen --output-dir src/types/",
    "create-local": "graph create davekaj/everest --node http://127.0.0.1:8020",
    "build": "graph build",
    "deploy-local": "graph deploy davekaj/everest --debug --ipfs http://localhost:5001 --node http://127.0.0.1:8020",
    "deploy": "graph deploy graphprotocol/everest --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "deploy-staging": "graph deploy graphprotocol/everest --ipfs https://api.staging.thegraph.com/ipfs/ --node https://api.staging.thegraph.com/deploy/",
    "watch-local": "graph deploy graphprotocol/everest --watch --debug --node http://127.0.0.1:8020/ --ipfs http://localhost:5001"
  }
}
